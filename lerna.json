{
  "packages": ["packages/*"],
  "version": "1.0.0",
  "npmClient": "yarn",
  "hoist": true,
  "stream": true,
  "command": {
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    },
    "publish": {
      "allowBranch": "master",
      "ignoreChanges": [
        "packages/**/*.test.js",
        "packages/**/*.test.js.snap",
        "packages/**/__tests__/**"
      ]
    }
  }
}
